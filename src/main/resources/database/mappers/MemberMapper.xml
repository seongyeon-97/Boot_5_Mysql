<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sy.b5.member.MemberRepository">
	<insert id="setInsert" parameterType="MemberVO">
		insert into member(id, pw, name, email)
		values(#{id}, #{pw}, #{name}, #{email})
	</insert>

	<insert id="setFileInsert" parameterType="MemberFilesVO">
		insert into memberFiles
		values(null, #{member_id}, #{fileName}, #{oriName})
	</insert>

	<select id="getLogin" parameterType="java.lang.String"
		resultType="getLoginResult">
		select M.*, R.*
		from member M
		inner join
		member_role MR
		on M.id = MR.id
		inner join
		role R
		on MR.NUM = R.NUM
		where M.id = #{userName};
	</select>

	<resultMap type="MemberVO" id="getLoginResult">
		<id column="id" property="id"/>
		<result column="pw" property="pw"/>
		<result column="name" property="name"/>
		<result column="email" property="email"/>
		<collection property="roles" javaType="List" ofType="RoleVO">
			<result column="num" property="num"/>
			<result column="roleName" property="roleName"/>
		</collection>
	</resultMap>

	<select id="getSelect" parameterType="MemberVO"
		resultType="MemberVO">
		select * from member where id = #{id}
	</select>
</mapper>